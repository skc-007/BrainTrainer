<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#cc78ffd6"
                android:endColor="#cca8ff78"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#cca8ff78"/>
            <corners
                android:radius="5dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#cca8ff78"/>
            <stroke
                android:width="1dp"
                android:color="#cc78ffd6"/>
            <corners
                android:radius="5dp"/>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>